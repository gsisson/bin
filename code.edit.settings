#!/usr/bin/env bash

f=settings.json
dirs=( "$HOME/Library/Application Support/Code/User"
       "$HOME/AppData/Roaming/Code/User"
     ) 
for dir in "${dirs[@]}"; do
  if [ -f "$dir/$f" ]; then
    echo $dir/$f
    #~/usr/bin/code $dir/$f
    code $dir/$f
    exit $?
  fi
done

echo "none were found:"
for dir in "${dirs[@]}"; do
  echo "  $dir"
done

